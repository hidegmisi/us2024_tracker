{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
      "lib": ["DOM", "ES2017"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts", "src/**/*.svelte"],
    "exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}